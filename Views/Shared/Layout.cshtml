

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Restaurante OnLine - @ViewBag.Title</title>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style> body {padding-top:150px;}</style>
</head>

<body>
    <div class="navbar navbar-dark navbar-fixed-top 
         @*container-fluid navbar-fixed-top*@
         ">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-link">@Html.ActionLink("Home", "Index", "Home",new {@class="navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Restaurantes", "Index", "Restaurante", new { @class = "navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Gêneros", "Index", "Genero", new { @class = "navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Bairros", "Index", "Bairro", new { @class = "navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Usuários", "Index", "Usuario", new { @class = "navbar-link" })</li>
                </ul>

                <div class="navbar-right">
                    <p style="margin:8px">
                        <a id="botao-sair" class="btn btn-success" style="display:none">Sair</a>
                    </p>

                </div>
            </div>
        </div>
    </div>
    @*<aside class="pull-right">
            <h1>Pesquise seu restaurente Aqui</h1>
        </aside>*@
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Autenticacao.js"></script>
    @RenderSection("Scripts", required: false)
    <div class="container body-content">

      
        <footer>
            <p>&copy; @DateTime.Now.Year - Restaurante Online</p>
        </footer>
    </div>
</body>
</html>

