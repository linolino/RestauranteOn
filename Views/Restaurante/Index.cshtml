@model IList<RestauranteOnline.Models.Restaurante>
@Html.ExibeImagensRestaurante()
<br /><br /><br />
<h3 class="pull-left">
    @Html.ActionLink("Novo Restaurante", "Inserir", "Restaurante")
</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Site</th>
            <th>Disque Entrega</th>
            <th>Genero</th>
            <th>Bairro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisqueEntrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro.Nome)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.IDRestaurante }) |
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.IDRestaurante })
                </td>
            </tr>

        }

    </tbody>

</table>
